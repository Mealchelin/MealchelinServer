<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.mealchelin.mvc.shoppingBasket.model.mapper.ShoppingBasketMapper">
	<resultMap  id="shoppingBasketResultMap" type="ShoppingBasket">
		<id property="memberNo" column="MEMBER_NO"/>
		<result property="payment" column="PAYMENT"/>
		<result property="shoppingBasketNo" column="SHOPPING_BASKET_NO"/>	
	</resultMap>

	<insert id="insertShoppingBasket" parameterType="_int"
			useGeneratedKeys="true" keyProperty="memberNo" keyColumn="MEMBER_NO">		
		INSERT INTO SHOPPING_BASKET (
			MEMBER_NO
		) VALUES (
			#{memberNo}
		)
	</insert>
	
	<select id="selectGetBasket" resultMap="shoppingBasketResultMap" parameterType="_int">
		SELECT MEMBER_NO,
			   SHOPPING_BASKET_NO,
			   PAYMENT
		FROM SHOPPING_BASKET
		WHERE MEMBER_NO = #{memberNo}

	</select>
	
	
	
	
	
	
	
	
	
	
	
	




</mapper>